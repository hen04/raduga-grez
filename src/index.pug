extends layout

block header
	.loading-screen
		.loading-screen__svg
			.loading-overlay
			img(src="images/loading.svg")

	.header-wrapper.header-wrapper--index
		include include/incl-header

block content

	main
		.main-index
			.header__info(data-scroll='' data-scroll-speed='1')
				h1 Toys<br> as art
				.header-video(data-scroll='' data-scroll-speed='1')
					video(autoplay="" loop="" muted="" playsinline="")
						source(src="./images/main.mp4")
				.header__btn(data-scroll='' data-scroll-speed='1')
					a(href="#" class="btn-outline btn-outline--light")
						span Find your toy

		.main-about-us
			.container
				.main-modern
					.title-small about us
					.main-modern__title(data-scroll='' data-scroll-speed='2.5')
						h2 Toys for modern families
					.main-modern__content
						.main-modern__text(data-scroll='' data-scroll-speed='2')
							p We create toys for mothers, who want to play with their children in an aesthetically way and not to feel bored about play.
						.main-modern__img
							.main-about-bottom
								img(src="images/content/about-3.jpg" alt="" data-scroll='' data-scroll-speed='1')
							.main-about-top
								img(src="images/content/about-2.jpg" alt="" data-scroll='' data-scroll-speed='1')
							.main-about-content
								img(src="images/content/about-1.jpg" alt="")
						.main-modern__text
							.main-modern__text-floating(data-scroll='' data-scroll-speed='2')
								p We produce ethical toys that will never serve a bad example for your children. We use only solid wood grown in our region and we buy it from a responsible supplier.
								a(href="" class="btn-outline btn-outline--dark")
									span Read more

				.catalog.catalog--main
					.catalog__title
						h3 toys to spend time together
					.catalog__list
						each item in catalog.slice(0, 5)
							.catalog__item
								a(href="catalogue-item.html")
									.catalog__image
										img(alt="" src= item.img)
									.catalog__content
										.catalog__category= item.category
										.catalog__info
											.catalog__name= item.name
											.catalog__price= item.price
								a(href="" class="add-to-cart") Add to cart

		.main-categories
			.container
				.main-categories__slider
					.swiper-container.js-main-categories
						.swiper-wrapper
							.swiper-slide
								.swiper-slide__text
									.title-small categories
									h3 Building blocks
									p We produce ethical toys that will never serve a bad example for your children. We use only solid wood grown in our region and we buy it from a responsible supplier.
									a(href="" class="btn-outline btn-outline--dark")
										span Shop
								.swiper-slide__img
									img(src="images/content/slider-1.jpg" alt="")
							.swiper-slide
								.swiper-slide__text
									.title-small categories
									h3 Building blocks
									p We produce ethical toys that will never serve a bad example for your children. We use only solid wood grown in our region and we buy it from a responsible supplier.
